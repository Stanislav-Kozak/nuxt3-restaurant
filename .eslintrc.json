{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-essential",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "@nuxtjs/eslint-config-typescript",
    "prettier"
  ],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "plugins": [
    "vue",
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": ["error"],
    "no-console": "error",
    "no-debugger": "error",
    "camelcase": [
      "error", { "properties": "never", "ignoreDestructuring": true, "ignoreImports": true }],
    "arrow-parens": [
      "error", "as-needed"
    ],
    "vue/multi-word-component-names": "off",
    "vue/multiline-html-element-content-newline": "error",
    "vue/no-v-html": "off",
    "@typescript-eslint/no-explicit-any": "warn"
  }
}
